<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5.0dip">

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10.0dip"
                android:text="OUTLET INFORMATION"
                android:textColor="#ff000000"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="?android:listDivider" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:padding="12.0dip">

                <ImageView
                    android:id="@id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location" />

                <TextView
                    android:id="@id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:padding="2.0dip"
                    android:text="Address" />
            </LinearLayout>

            <View
                android:id="@id/divider2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_weight="1.0"
                android:background="?android:listDivider" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12.0dip">

                <ImageView
                    android:id="@id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_phone_android" />

                <TextView
                    android:id="@id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:padding="2.0dip"
                    android:text="\ 0900786011" />

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.25" />

                <ImageView
                    android:id="@id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_phone" />

                <TextView
                    android:id="@id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:padding="2.0dip"
                    android:text="\ 000000000000" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="7.0dip"
                android:text="DESCRIPTION"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <View
                android:id="@id/divider4"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="?android:listDivider" />

            <TextView
                android:id="@id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5.0dip"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum egestas ante at congue tincidunt. Nam fringilla arcu quam, vehicula porttitor purus tristique quis. Sed in volutpat est. Nulla nec ante ac justo sagittis fringilla pretium dictum turpis. Maecenas commodo tincidunt turpis, vel tempor felis vestibulum vitae" />

            <View
                android:id="@id/divider5"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="?android:listDivider" />

            <TextView
                android:id="@id/textView7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="7.0dip"
                android:text="SPECIALITIES"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pizza"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4.0dip"
                android:text="Pizza, Burgers, Fried n Crispy etc" />

            <View
                android:id="@id/divider6"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="?android:listDivider" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>