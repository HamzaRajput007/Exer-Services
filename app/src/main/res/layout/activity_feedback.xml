<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10.0dip">

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="How are we doing?"
        android:textColor="#ff000000"
        android:textSize="30.0dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="We want to hear what you love and what you think we can do better." />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="Feedback Type:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.0dip"
        android:background="@drawable/background_white"
        android:ems="10"
        android:hint="Select Type"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="Your Feedback:"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:layout_marginTop="7.0dip"
        android:background="@drawable/background_white"
        android:ems="10"
        android:gravity="center|right|top"
        android:hint="Type your feedback here...."
        android:inputType="textPersonName"
        android:lines="10"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/button"
        android:layout_width="300.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20.0dip"
        android:background="@color/colorPrimaryDark"
        android:text="Submit"
        android:textColor="#ffffffff" />
</LinearLayout>