<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150.0dip"
    android:layout_height="100.0dip"
    android:layout_margin="5.0dip"
    app:cardCornerRadius="10.0dip"
    app:cardElevation="10.0dip">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/stakes"
                android:scaleType="center" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/foregraound_gray_row" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5.0dip">

            <TextView
                android:id="@+id/nearshops_discount_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2.0dip"
                android:textColor="#ffffffff"
                android:textSize="11.0sp"
                android:typeface="normal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25.0dip"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:background="@drawable/red_border"
                    android:padding="3.0dip">

                    <ImageView
                        android:id="@+id/neardeals_recycler_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/chik" />
                </FrameLayout>

                <TextView
                    android:id="@+id/near_name_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:foregroundGravity="bottom"
                    android:gravity="bottom"
                    android:lines="1"
                    android:paddingLeft="10.0dip"
                    android:text="Restaurant"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>